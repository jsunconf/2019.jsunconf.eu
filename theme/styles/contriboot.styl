.contriboot-headline
  padding-bottom: 0

.contriboot section
  padding-right: 10vw
  padding-left: 10vw

  @media (max-width: 600px)
    padding-right: 2rem
    padding-left: 2rem

fieldset
  border: none
  margin-bottom: 1.25em

input,
textarea,
.textarea
  outline: none
  background-color: white
  color: black

input[type="text"],
textarea,
.textarea
  padding: 1em .6em
  font-size: 1rem
  display: block
  width: 100%
  border: none

textarea,
.textarea
  min-height: 6em

.submit-form
  padding: 15px
  max-width: 500px
  margin: 1em auto

  button
    &:disabled,
    &:disabled:hover
      background-color: grey;
      cursor: default

  &__header
    h3, fieldset
      display: inline-block
    h3
      margin-right: .4em

  & input[type="text"]
    border-bottom: 2px solid #8f237f
    margin-bottom: 2rem

  & input[type="radio"]
    display:none

  & input[type="radio"] + label
    font-size: 16px
    cursor: pointer
    margin-right: 1rem

  & input[type="radio"]:checked + label:hover,
  & input[type="radio"] + label:hover
    background-color: #46003c
    color: white

  & input[type="radio"]:checked + label
    // box-shadow: 3px 3px 0px #004b9f
    background-color: #8f237f
    color: white

  .textarea
    border-bottom: 2px solid #8f237f

.entries-container
  display: flex
  flex-wrap: nowrap
  justify-content: center
  flex-direction: column
  width: 100%

  @media (min-width: 50em)
    flex-wrap: wrap
    flex-direction: row

.entries
  width: 100%
  // max-width: 50em
  margin: 0
  flex-grow: 1
  flex-shrink: 1

  ul
    list-style-type: none
    padding-left: 0
    text-align: left

.entry
  margin-bottom: 10px
  border: 2px solid transparent
  position: relative
  transition: all .3s ease-in-out

  & a
    text-decoration: none
    & h3
      color: #8f237f
    &:hover,&:focus
      background-color: rgba(0, 0, 0, 0)

  &:hover, &:focus, &--active
    border-radius: 4px
    border-color: #8f237f
    background: #46003c
    color: white
    transition: all 0.4s ease-in

    a
      h3
        color: white

  &--active
    border-color: #8f237f
    background-color: white
    color: #8f237f

    a
      h3
        color: #8f237f

    &:hover, &:focus
      border-color: #46003c

  &__header
    display: flex
    justify-content: space-between
    align-items: baseline

    &__title
      width: 100%
      border: none
      padding: 10px
      a
        h3
          font-size: 1.75em
          margin: 0
          color: white !important

    &__author
      font-size: .7em
      display: block

    &__votes
      display: flex
      align-items: center
      width: 5em
      flex-shrink: 0
      padding-left: 15px

      &__button
        margin-right: 5px
        color: #8f237f
        background: none
        border: none
        font-size: 26px
        cursor: pointer

      &__button[disabled]
        color: #8f237f
        cursor: default

      &__button:hover
        color: white

  &__description
    padding: 1rem

  &:not(&--active) &__description
    display: none

.user
  display: flex
  justify-content: center
  align-items: baseline
  max-width: 500px
  margin: 3em auto 2em auto

  &__message
    display: inline-block
    margin-right: 10px

/**
 * Spinner
 */
.react-spinner {
  position: relative;
  width: 50px;
  height: 32px;
  left: 50%;
  margin: 5em 0 2em 0
}

.react-spinner_bar {
  -webkit-animation: react-spinner_spin 1.2s linear infinite;
  -moz-animation: react-spinner_spin 1.2s linear infinite;
  animation: react-spinner_spin 1.2s linear infinite;
  border-radius: 5px;
  background-color: #911C80;
  position: absolute;
  width: 20%;
  height: 7.8%;
  top: -3.9%;
  left: -10%;
}

@keyframes react-spinner_spin {
 0% { opacity: 1; }
 100% { opacity: 0.15; }
}

@-moz-keyframes react-spinner_spin {
 0% { opacity: 1; }
 100% { opacity: 0.15; }
}

@-webkit-keyframes react-spinner_spin {
 0% { opacity: 1; }
 100% { opacity: 0.15; }
}
